<div class="post">
  <div class="title">{{post.title}}</div>
  <div class="date">posted the {{prettifyDate post.date}}</div>
  <div class="social">

    <a class="facebook" href="#" 
      onclick="
        window.open(
          'https://www.facebook.com/sharer/sharer.php?u='+encodeURIComponent(location.href), 
          'facebook-share-dialog',
          'width=626,height=436'); 
        return false;">
      <img src="{{static.root}}images/fb-share.png" />
      <span>Share</span>
    </a>

    <a href="https://twitter.com/share"
      class="twitter-share-button" 
      data-url="http://funktion.fm#post/{{post.slug}}" 
      data-text="{{post.title}} http://funktion.fm#post/{{post.slug}}" 
      data-via="sebpiq"
      data-count="none">
      Tweet
    </a>
    <script>
      twttr.widgets.load()
    </script>

  </div>

  <div class="content">{{{post.content}}}</div>

  <div id="disqus_thread"></div>
  <script type="text/javascript">
      /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
      var disqus_shortname = 'funktionfm'; // required: replace example with your forum shortname

      /*var disqus_callback = function() {
        return function() {
          $('#postBody .post').jScrollPane({ hideFocus: true })
        }
      }*/

      //var disqus_config = function() { console.log(this.callbacks) }

      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function() {
          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
          dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
  </script>
  <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
    
</div>
